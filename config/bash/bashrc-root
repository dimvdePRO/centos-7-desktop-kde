# .bashrc

# Prendre en compte la configuration globale
if [ -f /etc/bashrc ]; then
  . /etc/bashrc
fi

# Quelques alias pratiques
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias ll='ls -al'
alias ..='cd ..'
alias ...='cd ../..'
alias vi='vim'

# Invite de commandes pour root
WHITE='\[\033[1;37m\]'
RED='\[\033[0;33m\]'
NC='\[\033[0m\]'
PS1="$RED[$WHITE\u$NC@$WHITE\h$NC:$WHITE\W$RED] #$NC "

# Vim est notre éditeur préféré
EDITOR=vim
VISUAL=$EDITOR
export EDITOR VISUAL

